@using CleanArch.Application.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Empty.cshtml";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="alert alert-danger">
        شما دسترسی ندارید
    </div>
}
<div class="center-container">
    <div class="container" onclick="onclick">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input asp-for="Password" type="checkbox" onclick="inputPassword()">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" id="input-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input asp-for="Repassword" type="checkbox" onclick="inputRepassword()">
                <label asp-for="Repassword" class="control-label"></label>
                <input asp-for="Repassword" class="form-control" id="input-repassword" />
                <span asp-validation-for="Repassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="ثبت و ورود" class="btn btn-dark" />
            </div>
            <br />
            <div class="form-group nav-link d-flex justify-content-center w-100">
                <a style="margin-right:6px; text-align:center;" asp-controller="Account" asp-action="Login" /> ورود به حساب کاربری
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
