<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CleanArch.Mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CleanArch.Mvc.styles.css" asp-append-version="true" />
</head>
<body class="home-page-image" style="background-image:url(/images/bg/1.jpg)">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CleanArch.Mvc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item pull-right">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">نمونه کارها</a>
                        </li>
                        <li class="nav-item pull-right">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">انواع طراحی</a>
                        </li>
                        <li class="nav-item pull-right">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">شرایط و قوانین کار</a>
                        </li>
                        <li class="nav-item pull-right">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">تماس با ما</a>
                        </li>
                    </ul>
                </div>
                <div class="d-flex; justify-content-end;">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item pull-right">
                                <a class="nav-link text-dark">@User.Identity.Name خوش آمدید !</a>
                            </li>
                            <li class="nav-item pull-right">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">خروج</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item pull-right">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">ثبت نام</a>
                            </li>
                            <li class="nav-item pull-right">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">ورود</a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 1404 - CleanArch.Mvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
